# Server settings
HOST=0.0.0.0
PORT=7860  # Hugging Face Spaces default port

# Model Configuration
DEFAULT_MODEL_PATH=/app/models/violence_detection.pth
MODEL_ARCHITECTURE=videomae

# Inference Configuration
NUM_FRAMES=16
FRAME_SIZE=224
BATCH_SIZE=1

# Device Configuration
