# ===========================================
# ViolenceSense Backend - Production Environment
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
# Get this from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/violencesense?retryWrites=true&w=majority
# ML Service URL
# If using Hugging Face Spaces: https://<your-space>.hf.space
# If using Railway: https://<your-app>.railway.app
ML_SERVICE_URL=https://your-ml-service-url.hf.space
ML_SERVICE_TIMEOUT=300000

# Model Configuration (configured on ML service side)
DEFAULT_MODEL_PATH=/models/violence_detection.pth
MODEL_ARCHITECTURE=videomae

# File Upload Configuration
MAX_FILE_SIZE=500000000
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
# Your Vercel frontend URL (can be comma-separated for multiple origins)
CORS_ORIGIN=https://violence-sense.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
